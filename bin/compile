#!/bin/bash
# bin/compile <build-dir> <cache-dir> <env-dir>

# Fail fast and fail hard.
set -eo pipefail

BUILD_DIR=$1
CACHE_DIR=$2
BIN_DIR=$(cd $(dirname $0); pwd)
ROOT_DIR=$(dirname $BIN_DIR)
WORKING_DIR=$(pwd)
VENDOR_DIR=".heroku"
DEST_DIR=$BUILD_DIR/$VENDOR_DIR

echo "-----> Installing gettext"

mkdir -p $DEST_DIR

curl http://fb_wanted.s3.amazonaws.com/bp/gettext.tar.gz -s | tar xzv -C $DEST_DIR > /dev/null 2>&1

mkdir -p $BUILD_DIR/.profile.d

echo "export PATH=\$PATH:\$HOME/$VENDOR_DIR/bin; export LD_LIBRARY_PATH=\$PATH:\$HOME/$VENDOR_DIR/lib" > $BUILD_DIR/.profile.d/gettext.sh

echo "-----> Done."
